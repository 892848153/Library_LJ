<LinearLayout
    android:id="@+id/id_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="48dp"
    android:animateLayoutChanges="true">
<!--    android:layoutAnimation="@anim/alpha_demo"   animate the group's children after the first layout.-->
    <!-- android:animateLayoutChanges="true"  会调用ViewGroup的setLayoutTransition(new LayoutTransition()) -->

    <Button
        android:id="@+id/add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addBtn"
        android:text="addBtns"/>

    <CheckBox
        android:id="@+id/id_appear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="APPEARING"/>

    <CheckBox
        android:id="@+id/id_change_appear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="CHANGE_APPEARING"/>

    <CheckBox
        android:id="@+id/id_disappear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="DISAPPEARING"/>

    <CheckBox
        android:id="@+id/id_change_disappear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="CHANGE_DISAPPEARING "/>

    <Button
        android:id="@+id/changing_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="triggerChangingTransition"
        android:text="CHANGING"/>

</LinearLayout>